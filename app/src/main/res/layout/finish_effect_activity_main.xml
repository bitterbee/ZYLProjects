<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/finish_effect_0"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.netease.imageprocess.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/slide_finish"
        style="@style/item_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_effect_slide"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/rotate_finish"
        style="@style/item_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_effect_rotate"
        android:textColor="@color/white" />
</LinearLayout>